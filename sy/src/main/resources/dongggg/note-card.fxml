      spacing="15"
      alignment="CENTER_LEFT"
      styleClass="note-card">

    <VBox spacing="5">
        <Label fx:id="titleLabel" styleClass="note-title"/>
        <Label fx:id="dateLabel" styleClass="note-date"/>
    </VBox>

    <Pane HBox.hgrow="ALWAYS"/>

    <CheckBox fx:id="checkBox" styleClass="note-check"/>
