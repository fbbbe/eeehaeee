<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="dongggg.NoteTypeSelectController"
            styleClass="root-pane, main-root">

    <center>
        <VBox alignment="CENTER" spacing="24">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <children>
                <VBox spacing="6" alignment="CENTER">
                    <children>
                        <Label text="어떤 노트를 만들까요?"
                               styleClass="note-type-title"/>
                        <Label text="나중에 언제든지 편집할 수 있어요."
                               styleClass="note-type-subtitle"/>
                    </children>
                </VBox>

                <VBox spacing="16" alignment="CENTER">
                    <children>
                        <Button fx:id="normalButton"
                                onAction="#onNormalNote"
                                maxWidth="480"
                                
                                
                                contentDisplay="GRAPHIC_ONLY"
                                styleClass="note-type-choice, general-choice">
                            <graphic>
                                <HBox spacing="16" alignment="CENTER_LEFT">
                                    <StackPane minWidth="64" minHeight="64"
                                               prefWidth="64" prefHeight="64"
                                               maxWidth="64" maxHeight="64"
                                               styleClass="note-type-icon, general-icon">
                                        <SVGPath
                                            content="M6 22a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h8a2.4 2.4 0 0 1 1.704.706l3.588 3.588A2.4 2.4 0 0 1 20 8v12a2 2 0 0 1-2 2z M14 2v5a1 1 0 0 0 1 1h5 M10 9H8 M16 13H8 M16 17H8"
                                            stroke="white"
                                            fill="transparent"
                                            strokeWidth="2"
                                            strokeLineCap="ROUND"
                                            strokeLineJoin="ROUND"
                                            style="-fx-scale-x:1.3; -fx-scale-y:1.3;"/>
                                    </StackPane>
                                    <VBox spacing="4" alignment="CENTER_LEFT">
                                        <Label text="일반 노트" styleClass="note-type-choice-title"/>
                                        <Label text="자유롭게 노트를 작성해요" styleClass="note-type-choice-subtitle"/>
                                    </VBox>
                                </HBox>
                            </graphic>
                        </Button>

                        <Button fx:id="conceptButton"
                                onAction="#onConceptNote"
                                maxWidth="480"
                                
                                
                                contentDisplay="GRAPHIC_ONLY"
                                styleClass="note-type-choice, concept-choice">
                            <graphic>
                                <HBox spacing="16" alignment="CENTER_LEFT">
                                    <StackPane minWidth="64" minHeight="64"
                                               prefWidth="64" prefHeight="64"
                                               maxWidth="64" maxHeight="64"
                                               styleClass="note-type-icon, concept-icon">
                                        <SVGPath
                                            content="M12 7v14 M3 18a1 1 0 0 1-1-1V4a1 1 0 0 1 1-1h5a4 4 0 0 1 4 4 4 4 0 0 1 4-4h5a1 1 0 0 1 1 1v13a1 1 0 0 1-1 1h-6a3 3 0 0 0-3 3 3 3 0 0 0-3-3z"
                                            stroke="white"
                                            fill="transparent"
                                            strokeWidth="2"
                                            strokeLineCap="ROUND"
                                            strokeLineJoin="ROUND"
                                            style="-fx-scale-x:1.3; -fx-scale-y:1.3;"/>
                                    </StackPane>
                                    <VBox spacing="4" alignment="CENTER_LEFT">
                                        <Label text="개념 노트" styleClass="note-type-choice-title"/>
                                        <Label text="체계적으로 개념을 정리해요" styleClass="note-type-choice-subtitle"/>
                                    </VBox>
                                </HBox>
                            </graphic>
                        </Button>
                    </children>
                </VBox>

                <Button text="← 되돌아가기"
                        maxWidth="480"
                        prefWidth="420"
                        prefHeight="60"
                        onAction="#onBack"
                        styleClass="button-outlined"/>
            </children>
        </VBox>
    </center>

</BorderPane>
