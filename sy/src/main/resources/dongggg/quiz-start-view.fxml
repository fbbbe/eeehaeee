<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="dongggg.QuizStartController"
            stylesheets="@styles.css"
            styleClass="root-pane, main-root">

    <!-- 상단 영역 -->
    <top>
        <VBox spacing="5">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <children>
                <Label text="시험 준비" styleClass="section-title"/>
                <Label text="시험 볼 노트를 선택하세요" styleClass="profile-subtitle"/>
            </children>
        </VBox>
    </top>

    <!-- 중앙: 카드 리스트 -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="no-border">
            <content>
                <VBox fx:id="noteListBox"
                      spacing="10"
                      alignment="TOP_CENTER">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <!-- 하단 -->
    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <children>
                <Label fx:id="selectedCountLabel"
                       text="0개의 노트가 선택되었습니다"
                       styleClass="info-label"/>

                <HBox spacing="10">
                    <children>
                        <Button text="취소"
                                styleClass="button-outlined"
                                onAction="#goBack"/>

                        <Button text="시험 시작"
                                fx:id="startButton"
                                styleClass="button-primary"
                                disable="true"
                                onAction="#startQuiz"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>

</BorderPane>
