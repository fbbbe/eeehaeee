<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="dongggg.NoteDetailController"
            styleClass="root-pane">

    <center>
        <VBox spacing="12">
            <padding>
                <Insets top="20" right="20" bottom="16" left="20"/>
            </padding>
            <children>

                <!-- 상단 헤더 -->
                <VBox spacing="4">
                    <children>
                        <Label text="노트 편집" styleClass="section-title"/>
                        <Label fx:id="dateLabel" styleClass="note-date"/>
                    </children>
                </VBox>

                <!-- 제목 -->
                <TextField fx:id="titleField"
                           promptText="제목을 입력하세요"
                           styleClass="note-pill-input"/>

                <!-- 내용 -->
                <TextArea fx:id="contentArea"
                          promptText="내용을 입력하세요"
                          prefRowCount="16"
                          wrapText="true"
                          styleClass="note-pill-input"/>

                <!-- 버튼들 -->
                <HBox spacing="8" alignment="CENTER_RIGHT">
                    <children>
                        <Button text="삭제"
                                fx:id="deleteButton"
                                onAction="#onDelete"
                                style="-fx-background-color: #fee2e2; -fx-text-fill: #b91c1c; -fx-background-radius: 999; -fx-padding: 6 14;"/>

                        <Pane HBox.hgrow="ALWAYS"/>

                        <Button text="취소"
                                onAction="#onCancel"
                                style="-fx-background-color: transparent; -fx-text-fill: #6d28d9; -fx-border-color: #e9d5ff; -fx-border-radius: 999; -fx-background-radius: 999; -fx-padding: 6 14;"/>

                        <Button text="저장"
                                onAction="#onSave"
                                style="-fx-background-color: linear-gradient(#7c3aed, #6d28d9); -fx-text-fill: white; -fx-background-radius: 999; -fx-padding: 6 18;"/>
                    </children>
                </HBox>

            </children>
        </VBox>
    </center>

</BorderPane>
